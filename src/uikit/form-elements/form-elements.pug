            +label({value: 'дети', pos: 'left', theme: ['bold', 'upper', 'centered']})
              +counter({plurals: ['ребенок', 'детей', 'детей']})

            +label({value: 'младенцы', pos: 'left', theme: ['bold', 'upper', 'centered']})
