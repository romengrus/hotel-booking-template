extends /uikit/_layout.pug

block append styles
  link(rel="stylesheet", href="./form-elements.scss")

block variables
  - var pageTitle = 'Toxin UIKit | Form Elements'
  - var bodyClass = 'uikit__form-elements'

  mixin form-element(title, state= '')
    .form-element
      .form-element__meta
        span.form-element__title= title
        span.form-element__state= state
      .form-element__showcase
        if block
          block

  include /components/index.pug

block main
  header.container.uikit__header
    a(href= '/')
      img(src= '/assets/icons/png/logo.png', width= 48, height= 48)

  main.container
    .form-elements__row
      .form-elements__col
        +form-element('text field', 'default')
          +field(type = "email", placeholder = "Email")

        +form-element('text field', 'hover / focus')
          +field(type = "text", value = "This is pretty awesome")

        +form-element('dropdown', 'default')
          +dropdown-counter({ resultType: 'total', plurals: ['гость', 'гостя', 'гостей'] })(placeholder = 'Сколько гостей')
            +label({ value: 'взрослые', pos: 'left', theme: ['bold', 'upper'] })
              +counter({ plurals: ['взрослый', 'взрослых', 'взрослых'] })

            +label({ value: 'дети', pos: 'left', theme: ['bold', 'upper'] })
              +counter({ plurals: ['ребенок', 'детей', 'детей'] })

            +label({ value: 'младенцы', pos: 'left', theme: ['bold', 'upper'] })
              +counter({ plurals: ['младенец', 'младенца', 'младенцев'] })

        +form-element('masked text field', 'default')
          +field

        +form-element('date dropdown')
          +datepicker(placeholder = 'ДД.ММ.ГГГГ')
        +form-element('date dropdown')
          +datepicker({ defaultDate: '2019.08.19' })

        +form-element('filter date dropdown')
          +datepicker({ mode: 'range' })(placeholder='ДД.ММ - ДД.ММ')

        +form-element('subscription text field')
          +subscription({ placeholder: 'Email' })

      .form-elements__col
        +form-element('checkbox buttons')
          +label({ value: 'Можно курить', pos: 'right'})
            +checkbox
          +label({ value: 'Можно с питомцами', pos: 'right'})
            +checkbox({ isChecked: true })
          +label({ value: ['Можно пригласить гостей', '(до 10 человек)'], pos: 'right'})
            +checkbox({ isChecked: true })

        +form-element('radio buttons')
          +label({ value: 'Мужчина' })
            +radio({ name: 'gender', isChecked: true })
          +label({ value: 'Женщина' })
            +radio({ name: 'gender' })

        +form-element('toggle')
          +label({ value: 'Получать спецпредложения', pos: 'right'})
            +switcher({ isOn: true })
          +label({ value: 'Получать спецпредложения', pos: 'right'})
            +switcher

        +form-element('like button')
          +like({ value: 2 })
          +like({ value: 12, hasVoted: true })

        +form-element('rate button')
          +rating({ value: 4, isPartial: true })
          +rating({ value: 5 })

      .form-elements__col
        +label({ value: 'Range Slider' })
          +range-slider({
            params: {
              start: [5000, 10000],
              range: {min: 0, max: 20000},
              connect: [false, true, false],
              format: {
                decimals: 0,
                thousand: ' ',
                suffix: ' ₽'
              }
            },
          })

        +form-element('buttons')
          +button({ isRounded: true }) click me
          +button({ isRounded: true, isDisabled: true }) click me
          +button({ isOutlined: true }) click me
          +button({ isOutlined: true, isDisabled: true }) click me
          +button({ isText: true }) click me
          +button({ isText: true, isDisabled: true }) click me
          +button({ icon: 'arrow-right-light', isRounded: true, isExpanded: true }) Перейти к оплате

        +form-element('pagination')
          +pagination({
            total: 150, 
            perPage: 10, 
            current: 1, 
            label: '${idxFrom} - ${idxTo} из ${approximately(totalItems)} вариантов аренды'
          })

    .form-elements__row
      .form-elements__col
        +form-element('dropdown', 'default')
          +dropdown-counter({ resultType: 'concat' })(placeholder = 'Выберите нужное количество ...')
            +label({ value: 'спальни', pos: 'left', theme: ['bold', 'upper'] })
              +counter({ plurals: ['спальня', 'спальни', 'спален'] })

            +label({ value: 'кровати', pos: 'left', theme: ['bold', 'upper'] })
              +counter({ plurals: ['кровать', 'кровати', 'кроватей'] })

            +label({ value: 'ванные комнаты', pos: 'left', theme: ['bold', 'upper'] })
              +counter({ plurals: ['ванная комната', 'ванные комнаты', 'ванных комнат'] })

        +form-element('dropdown', 'expanded')
          +dropdown-counter({ resultType: 'concat', isCollapsed: false })(placeholder = 'Выберите нужное количество ...')
            +label({ value: 'спальни', pos: 'left', theme: ['bold', 'upper'] })
              +counter({ plurals: ['спальня', 'спальни', 'спален'] })

            +label({ value: 'кровати', pos: 'left', theme: ['bold', 'upper'] })
              +counter({ plurals: ['кровать', 'кровати', 'кроватей'] })

            +label({ value: 'ванные комнаты', pos: 'left', theme: ['bold', 'upper'] })
              +counter({ plurals: ['ванная комната', 'ванные комнаты', 'ванных комнат'] })

      .form-elements__col
        +form-element('dropdown')
          +dropdown-counter({ 
            resultType: 'total', 
            plurals: ['гость', 'гостя', 'гостей'], 
            isCollapsed: false 
          })(placeholder = 'Сколько гостей')
            +label({ value: 'взрослые', pos: 'left', theme: ['bold', 'upper'] })
              +counter({ plurals: ['взрослый', 'взрослых', 'взрослых'] })

            +label({ value: 'дети', pos: 'left', theme: ['bold', 'upper'] })
              +counter({ plurals: ['ребенок', 'детей', 'детей'] })

            +label({ value: 'младенцы', pos: 'left', theme: ['bold', 'upper'] })
              +counter({ plurals: ['младенец', 'младенца', 'младенцев'] })

      .form-elements__col
        +form-element('dropdown')
          +dropdown-counter({
            resultType: 'total',
            plurals: ['гость', 'гостя', 'гостей'],
            isCollapsed: false,
          })(placeholder = 'Сколько гостей')
            +label({ value: 'взрослые', pos: 'left', theme: ['bold', 'upper'] })
              +counter({ plurals: ['взрослый', 'взрослых', 'взрослых'] })

            +label({ value: 'дети', pos: 'left', theme: ['bold', 'upper'] })
              +counter({ plurals: ['ребенок', 'детей', 'детей'] })

            +label({ value: 'младенцы', pos: 'left', theme: ['bold', 'upper'] })
              +counter({ plurals: ['младенец', 'младенца', 'младенцев'] })

    .form-elements__row
      .form-elements__col
        +panel({ title: 'Expandable checkbox list', isCollapsed: true })
          +form
            +label({ value: 'Завтрак', pos: 'right' })
              +checkbox
            +label({ value: 'Письменный стол', pos: 'right' })
              +checkbox({ isChecked: true })
            +label({ value: 'Стул для кормления', pos: 'right' })
              +checkbox({ isChecked: true })
            +label({ value: 'Кроватка', pos: 'right' })
              +checkbox({ isChecked: true })
            +label({ value: 'Телевизор', pos: 'right' })
              +checkbox({ isChecked: true })
            +label({ value: 'Шампунь', pos: 'right' })
              +checkbox
      
        +panel({ title: 'Expandable checkbox list' })
          +form
            +label({ value: 'Завтрак', pos: 'right' })
              +checkbox
            +label({ value: 'Письменный стол', pos: 'right' })
              +checkbox({ isChecked: true })
            +label({ value: 'Стул для кормления', pos: 'right' })
              +checkbox({ isChecked: true })
            +label({ value: 'Кроватка', pos: 'right' })
              +checkbox({ isChecked: true })
            +label({ value: 'Телевизор', pos: 'right' })
              +checkbox({ isChecked: true })
            +label({ value: 'Шампунь', pos: 'right' })
              +checkbox

      .form-elements__col
        +form-element('Rich checkbox buttons')
          +label({ 
            value: 'Широкий коридор', 
            desc: 'Ширина коридоров в номере не менее 91 см.', 
            pos: 'right', 
            theme: 'bold' 
          })
            +checkbox
          +label({ 
            value: 'Помощник для инвалидов', 
            desc: 'На 1 этаже вас встретит специалист и проводит до номера.', 
            pos: 'right', 
            theme: 'bold' 
          })
            +checkbox

      .form-elements__col
        +form-element('Bullet list')
          +list({
            items: [
              'Нельзя с питомцами', 
              'Без вечеринок и мероприятий', 
              'Время прибытия — после 13:00, а выезд до 12:00'
            ]
          })

    .form-elements__row
      .form-elements__col
        +benefit({
          icon: 'emoticon-happy', 
          title: 'Комфорт',
          desc: 'Шумопоглощающие стены',
        })
        +benefit({
          icon: 'location-city', 
          title: 'Удобство',
          desc: 'Окно в каждой из спален',
        })

      .form-elements__col
        +testimonial({
          userName: 'Мурад Сарафанов', 
          userImg: '/assets/img/testimonial-user-2.png',
          text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.',
          createdAt: '5 дней назад',
          numLikes: 12,
        })
