        .m-t-19
          +form-element('dropdown', 'expanded')
            +dropdown-counter({ 
              resultType: 'concat', 
              isCollapsed: false 
            })(placeholder = 'Выберите нужное количество ...')
              +label({value: 'спальни', pos: 'left', theme: ['bold', 'upper', 'centered']})
