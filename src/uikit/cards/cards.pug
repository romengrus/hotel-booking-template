extends /uikit/layout.pug

block variables
  - var pageTitle = 'Toxin UIKit | Cards'
  - var bodyClass = 'cards'

block append parts
  include /components/form-room-search/form-room-search.pug
  include /components/form-room-reservation/form-room-reservation.pug
  include /components/form-register/form-register.pug
  include /components/form-login/form-login.pug
  include /components/datepicker/datepicker.pug
  include /components/room-card/room-card.pug
  include /components/slider/slider.pug

block append styles
  link(rel='stylesheet', href='./cards.scss')

block append scripts
  script(src='./cards.js')

block main
  header.container.uikit__header
    +logo

  main.container.p-b-100
    .cards__row
      .cards__col.cards__col-1
        +form-room-search
        .m-t-39
          +form-register

      .cards__col.cards__col-2
        +form-room-reservation({room: 888, isLux: true, price: 9990})
        .m-t-39
          +form-login

      .cards__col.cards__col-3
        div(style = 'margin-top: -45px; visibility: hidden;')
          +datepicker({ dates: ['19.08.2019', '23.08.2019'], isInline: true, mode: 'range' })
        .m-t-43
          +room-card({
            room: 888,
            isLux: true,
            price: 9990,
            rating: 5, 
            numReviews: 145,
          })
            +slider({
              slides: [{
                img: '/assets/img/room-cards/room-card-1.png'
              }, {
                img: '/assets/img/room-cards/room-card-2.png',
              }, {
                img: '/assets/img/room-cards/room-card-3.png',
              }, {
                img: '/assets/img/room-cards/room-card-4.png'
              }],
              showPagination: true,
              showNavigation: true,
              params: {
                pagination: {
                  clickable: true
                }
              }
            })

          .m-t-40
            +room-card({
              room: 840,
              price: 9990,
              rating: 4, 
              numReviews: 65,
            })
              +slider({
                slides: [{
                  img: '/assets/img/room-cards/room-card-2.png'
                }, {
                  img: '/assets/img/room-cards/room-card-1.png',
                }, {
                  img: '/assets/img/room-cards/room-card-3.png',
                }, {
                  img: '/assets/img/room-cards/room-card-4.png'
                }],
                showPagination: true,
                params: {
                  pagination: {
                    clickable: true
                  }
                }
              })
