extends /uikit/layout.pug

block main
  include /components/index.pug

  section.showcase
    h2.showcase__title icons
    .showcase__content
      .ui-icons
        each icon in icons
          .ui-icons__icon-info
            .ui-icons__name= icon
            .ui-icons__icon
              +icon({ name: icon, size: 'big' })

  section.showcase
    h2.showcase__title header
    .showcase__content
      +header({ isLoggedIn: false })
      +header({ isLoggedIn: true })

  section.showcase
    h2.showcase__title hero
    +hero({
      bgImg: '/assets/img/hero1.jpg',
      info: 'Лучшие номера для вашей работы, отдыха и просто вдохновения'
    })

  section.showcase
    h2.showcase__title footer
    .showcase__content
      +footer

  section.showcase
    h2.showcase__title copyright bar
    .showcase__content
      +copyright

  section.showcase
    h2.showcase__title subscription
    .showcase__content
      +subscription

  section.showcase
    h2.showcase__title counter
    .showcase__content
      +counter({ min: 5, max: 10, value: 7 })

  section.showcase
    h2.showcase__title like button 
    .showcase__content
      +like
      +like({ value: 100, hasVoted: true })
      +like({ value: 543, hasVoted: false })

  section.showcase
    h2.showcase__title form elements
    .showcase__content
      h3.showcase__subtitle buttons
      .ui-buttons
        +button click me
        +button({isOutlined: true}) click me
        +button({type: 'link', href: 'https://google.com'}) click me
        +button({isOutlined: true}) click me
        +button({isTextOnly: true}) click me
        +button({isDisabled: true}) перейти к оплате
        +button({isExpanded: true}) перейти к оплате
        +button({isExpanded: true, isOutlined: true, icon: 'arrow-right-light'}) перейти к оплате
        +button({icon: 'arrow-right-light'}) перейти к оплате
        +button({isOutlined: true, icon: 'arrow-right'}) перейти к оплате

      h3.showcase__subtitle input text
      .ui-inputs
        +form
          +field(placeholder = 'default text input')
          +field(placeholder = 'disabled text input', disabled = true)
          +field(placeholder = 'required text input', required = true)
          +field(placeholder = 'with min lenght = 3', minlength = 3, required = true)
          +field(placeholder = 'with max lenght = 7', maxlength = 7, required = true)

      h3.showcase__subtitle datepicker
      .ui-inputs
        +form
          +datepicker
          +datepicker(disabled = true)
          +datepicker(required = true)
          +datepicker(placeholder = 'ДД.ММ.ГГ')
          +datepicker({ mode: 'range' })(placeholder='ДД.ММ.ГГ - ДД.ММ.ГГ')
          +datepicker({ mode: 'multiple' })(placeholder='ДД.ММ.ГГ, ДД.ММ.ГГ, ...')

      h3.showcase__subtitle checkbox
      .ui-inputs
        +form
          +checkbox({ name: 'check-test' })
          br
          +checkbox({ name: 'check-test', isChecked: true })

      h3.showcase__subtitle radio
      .ui-inputs
        +form
          +radio({ name: 'radio-test' })
          br
          +radio({ name: 'radio-test', isChecked: true })

      h3.showcase__subtitle switcher button
      .ui-inputs
        +form
          +switcher
          br
          +switcher({ isOn: true })

      h3.showcase__subtitle range slider
      .ui-inputs
        +range-slider({
          params: {
            start: [20, 80],
            range: {min: 0, max: 100},
            connect: [false, true, false],
            format: {
              decimals: 0,
              thousand: ' ',
              suffix: ' ₽'
            }
          },
        })

      h3.showcase__subtitle rating
      .ui-inputs
        +form
          +rating({ value: 2.7, isPartial: true })
          br
          +rating({ value: 4.3 })
          br
          +rating({ value: 7.2, isPartial: true, total: 10 })

      h3.showcase__subtitle pagination
        +pagination({ total: 10, perPage: 5, current: 1 })
        +pagination({ total: 56, perPage: 7, current: 2 })

      h3.showcase__subtitle list
        +list({
          items: [
            'Нельзя с питомцами', 
            'Без вечеринок и мероприятий', 
            'Время прибытия — после 13:00, а выезд до 12:00'
          ]
        })
        br
        +list({
          isOrdered: true, 
          items: [
            'Нельзя с питомцами', 
            'Без вечеринок и мероприятий', 
            'Время прибытия — после 13:00, а выезд до 12:00'
          ]
        })

  section.showcase
    h2.showcase__title testimonial
    .showcase__content
      +testimonial({
        userName: 'Мурад Сарафанов', 
        userImg: '/assets/img/testimonial-user-1.png',
        text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.',
        createdAt: 'На прошлой неделе',
        numLikes: 12,
      })

  section.showcase
    h2.showcase__title benefit
    .showcase__content
      +benefit({icon: 'emoticon-happy', title: 'Комфорт', desc: 'Шумопоглощающие стены'})
      +benefit({icon: 'location-city', title: 'Удобство', desc: 'Окно в каждой из спален'})

  section.showcase
    h2.showcase__title panel
    .showcase__content
      +panel({ title: 'Expandable checkbox list', isCollapsible: true })
        +form
          +label({ value: 'Завтрак' })
            +checkbox
          +label({ value: 'Письменный стол' })
            +checkbox({ isChecked: true })
          +label({ value: 'Стул для кормления' })
            +checkbox({ isChecked: true })
          +label({ value: 'Кроватка' })
            +checkbox
          +label({ value: 'Телевизор' })
            +checkbox
          +label({ value: 'Шампунь' })
            +checkbox

  section.showcase
    h2.showcase__title dropdown counter
    .showcase__content
      +dropdown-counter({ resultType: 'concat' })(placeholder = 'Выберите нужное количество ...')
        +label({ value: 'спальни', pos: 'left', theme: ['bold', 'upper'] })
          +counter({ plurals: ['спальня', 'спальни', 'спален'] })

        +label({ value: 'кровати', pos: 'left', theme: ['bold', 'upper'] })
          +counter({ plurals: ['кровать', 'кровати', 'кроватей'] })

        +label({ value: 'ванные комнаты', pos: 'left', theme: ['bold', 'upper'] })
          +counter({ plurals: ['ванная комната', 'ванные комнаты', 'ванных комнат'] })
      br
      +dropdown-counter({
        displayType: 'total',
        plurals: ['гость', 'гостя', 'гостей']
      })&attributes({placeholder: 'Сколько гостей'})
        +label({ value: 'взрослые', pos: 'left', theme: ['bold', 'upper'] })
          +counter({ plurals: ['взрослый', 'взрослых', 'взрослых'] })

        +label({ value: 'дети', pos: 'left', theme: ['bold', 'upper'] })
          +counter({ plurals: ['ребенок', 'детей', 'детей'] })

        +label({ value: 'младенцы', pos: 'left', theme: ['bold', 'upper'] })
          +counter({ plurals: ['младенец', 'младенца', 'младенцев'] })

  section.showcase
    h2.showcase__title doughnut chart
    .showcase__content
      +doughnut({
        data: [{
          value: 556,
          label: 'Великолепно',
          bg: '#FFE39C'
        }, {
          value: 342,
          label: 'Хорошо',
          bg: '#6FCF97'
        }, {
          value: 227,
          label: 'Удовлетворительно',
          bg: '#BC9CFF'
        }, {
          value: 0,
          label: 'Разочарован',
          bg: '#919191'
        }]
      })

  section.showcase
    h2.showcase__title Room Search
    .showcase__content
      +form-room-search

  section.showcase
    h2.showcase__title Room Reservation
    .showcase__content
      +form-room-reservation({room: 666, price: 9900, isLux: true})

  section.showcase
    h2.showcase__title Register Form
    .showcase__content
      +form-register

  section.showcase
    h2.showcase__title Login Form
    .showcase__content
      +form-login

  section.showcase
    h2.showcase__title Room Card
    .showcase__content
      +room-card({
        room: 888,
        isLux: true,
        price: 5900,
        rating: 4,
        numReviews: 148,
      })
        +slider({
          slides: [{
            img: '/assets/img/room-card-1.jpg'
          }, {
            img: '/assets/img/room-card-2.jpg',
          }, {
            img: '/assets/img/room-card-3.jpg',
          }, {
            img: '/assets/img/room-card-4.jpg'
          }],
          params: {
            pagination: {
              clickable: true
            }
          },
          showPagination: true,
        })