include /blocks/library/menu/menu.pug

mixin footer
  footer.footer
    .footer__content
      .footer__col.footer__col-1
        include /assets/img/logo.svg
        p Lorem ipsum dolor sit amet consectetur adipiscing elit aliquam eget nullam pellentesque aliquam curabitur cociis.
      .footer__col.footer__col-2
        h3 navigation
        +menu({orientation: 'vertical', items: getData('menuNavigation')})
      .footer__col.footer__col-3
        h3 about us
        +menu({orientation: 'vertical', items: getData('menuAboutUs')})
      .footer__col.footer__col-4
        h3 support
        +menu({orientation: 'vertical', items: getData('menuSupport')})
      .footer__col.footer__col-5
        h3 subscribe to our newsletter
        p Receive our latest news and promotions in your inbox! 
        input(type= 'text')