extends /layout/base.pug

block append meta
  meta(name= "keywords", content= "toxin-hotel, details")
  meta(name= "description", content= "Toxin-hotel details page")

block variables
  - var pageTitle = 'Room Details'
  - var bodyClass = 'details-page'

block append parts
  include /components/room-showcase/room-showcase.pug
  include /components/doughnut/doughnut.pug
  include /components/list/list.pug
  include /components/room-reservation/room-reservation.pug
  include /components/benefit/benefit.pug
  include /components/testimonial/testimonial.pug

block main
  .room-details-page__showcase
    +room-showcase({ 
      first: '/assets/img/hero1.jpg', 
      second: '/assets/img/hero2.jpg', 
      third: '/assets/img/hero3.jpg' 
    })

  .room-details-page__wrapper
    article.room-details-page__content
      .room-details-page__info
        .room-details-page__benefits
          h3 Сведения о номере
          .room-details-page__benefit
            +benefit({
              icon: 'emoticon-happy', 
              title: 'Комфорт',
              desc: 'Шумопоглощающие стены',
            })
          .room-details-page__benefit
            +benefit({
              icon: 'location-city', 
              title: 'Удобство',
              desc: 'Окно в каждой из спален',
            })
          .room-details-page__benefit
            +benefit({
              icon: 'fire', 
              title: 'Уют',
              desc: 'Номер оснащен камином',
            })

        .room-details-page__stats
          h3.room-details-page__stats-title Впечатления от номера
          +doughnut({
            data: [{
              value: 100,
              label: 'Великолепно',
              bg: '#FFE39C'
            }, {
              value: 60,
              label: 'Хорошо',
              bg: '#6FCF97'
            }, {
              value: 60,
              label: 'Удовлетворительно',
              bg: '#BC9CFF'
            }, {
              value: 40,
              label: 'Разочарован',
              bg: '#919191'
            }]
          })
      
      .room-details-page__testimonials
        h3.room-details-page__testimonials-title 
          | Отзывы посетителей номера
          span.room-details-page__testimonials-total 2 отзыва
        .room-details-page__testimonial
          +testimonial({
            userName: 'Мурад Сарафанов', 
            userImg: '/assets/img/testimonial-user-1.png',
            text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.',
            createdAt: '5 дней назад',
            numLikes: 12,
          })
        .room-details-page__testimonial
          +testimonial({
            userName: 'Патрисия Стёклышкова', 
            userImg: '/assets/img/testimonial-user-2.png',
            text: `Обслуживание на высоте! Все аккуратно, чисто. Завтраки в номер советую заказать, каждый день новое
              блюдо и десерт как комплимент`,
            createdAt: 'Неделю назад',
            numLikes: 2,
          })

      .room-details-page__rules
        .room-details-page__rules-behavior
          h3.room-details-page__rules-title Правила
          .room-details-page__rules-list
            +list({items: 
              [
                'Нельзя с питомцами', 
                'Без вечеринок и мероприятий', 
                'Время прибытия — после 13:00, а выезд до 12:00'
              ]
            })

        .room-details-page__rules-cancel
          h3.room-details-page__title Отмена
          p.room-details-page__rules-desc 
            | Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. 
            | до прибытия вы получите полный возврат за вычетом сбора за услуги.

    aside.room-details-page__sidebar
      +room-reservation({
        room: 888, 
        price: 9990,
        isLux: true,
        fees: [{
          title: 'Скидка',
          desc: 'Скидка постоянному клиенту',
          amount: -2179
        }, {
          title: 'Сбор за дополнительные услуги',
          desc: 'Боди массаж',
          amount: 300
        }]
      })