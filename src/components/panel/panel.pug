//- Panel
//-
//- title           string ('') - Panel title
//- isCollapsible   boolean (true) - If true - panel can collapse and expand. Toggle icon will be shown in this case
//- isCollapsed     boolean (false) - If true - will render in collapsed state
//- icon            string ('semi-arrow-up') - Name of icon for toggler
mixin panel(props = {})
  include /components/icon/icon.pug

  -
    const { title, isCollapsible, isCollapsed, icon } = Object.assign({
      title: '',
      isCollapsible: false,
      isCollapsed: false,
      icon: 'semi-arrow-up'
    }, props);

    const classList = ['panel'];

    if (isCollapsed) classList.push('panel_is-collapsed');

  div(class = classList, 'data-is-collapsible' = isCollapsible)
    .panel__header
      .panel__title= title 

      if (isCollapsible)
        .panel__toggler
          +icon({ name: icon, size: 'small' })

    .panel__body
      if block
        block


