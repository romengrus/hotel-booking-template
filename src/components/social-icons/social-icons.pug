//- Social icons
//-
//- icons     array ([]) - Array of icon objects 
//--- icon {
//---   name    string ('') - Icon name
//---   href    string ('') - Link to social account/page 
//--- }
mixin social-icons(props = {})
  include /components/icon/icon.pug

  - 
    const defaultIcons = [{
        name: 'twitter',
        href: dummyURL,
      }, {
        name: 'facebook',
        href: dummyURL,
      }, {
        name: 'instagram',
        href: dummyURL,
    }];

    const { icons } = Object.assign({ icons: defaultIcons }, props);

  .social-icons
    each icon in icons
      a(class= 'social-icons__link', href= icon.href)
        +icon({name: icon.name, size: 'big'})

  