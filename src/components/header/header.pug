//- Main header
//-
//- isLoggedIn    boolean (false) - If user is logged in
//- userName      string ('Cosmin Negoita') - User name to show in auth block
//- lblLogin      string ('') - login button text
//- lblRegister   string ('') - register button text
mixin header({isLoggedIn = false, userName = '', lblLogin = '', lblRegister = ''} = {})
  include /components/logo/logo.pug
  include /components/menu/menu.pug
  include /components/button/button.pug
  include /components/hamburger/hamburger.pug

  header.header(data-header)
    .header__wrapper
      .header__logo
        +logo

      .header__menu(data-header-menu)
        button.header__menu-close(data-header-menu-close) &times;

        if block
          block
        else 
          +menu({
            items: [{
              "name": "о нас",
              "href": dummyURL,
              "isActive": true
            },
            {
              "name": "услуги",
              "href": dummyURL,
              "isActive": false,
              "submenu": [
                {
                  "name": "апартаменты",
                  "href": dummyURL,
                  "isActive": false
                },
                {
                  "name": "spa",
                  "href": dummyURL,
                  "isActive": false
                },
                {
                  "name": "конференц залы",
                  "href": dummyURL,
                  "isActive": false
                }
              ]
            },
            {
              "name": "вакансии",
              "href": dummyURL,
              "isActive": false
            },
            {
              "name": "новости",
              "href": dummyURL,
              "isActive": false
            },
            {
              "name": "соглашения",
              "href": dummyURL,
              "isActive": false,
              "submenu": [
                {
                  "name": "соглашение 1",
                  "href": dummyURL,
                  "isActive": false
                },
                {
                  "name": "соглашение 2",
                  "href": dummyURL,
                  "isActive": false
                },
                {
                  "name": "соглашение 3",
                  "href": dummyURL,
                  "isActive": false
                }
              ]
            }]
          })

        if (isLoggedIn)
          .header__auth.header__auth_is-logged-in
            a(class = 'header__profile-link', href = dummyURL)= userName
        else 
          .header__auth
            +button({type: 'link', size: 'small', isOutlined: true})= lblLogin
            +button({type: 'link', size: 'small'})= lblRegister 

      .header__menu-toggler(data-header-menu-toggler)
        +hamburger