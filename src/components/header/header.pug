//- Main header
//-
//- isLoggedIn  {boolean} If user is logged in
//- userName    {string} User name to show in auth block
//- mods        {array} Modifier classes
mixin header(props)
  include /components/menu/menu.pug
  include /components/button/button.pug
  include /components/hamburger-menu/hamburger-menu.pug

  - 
    props = Object.assign({
      isLoggedIn: false,
      userName: 'Cosmin Negoita',
      mods: []
    }, props)
    
    var mods = ['header'].concat(props.mods)

  header(class= mods)
    .header__wrapper
      .row
        .header__logo
          a(href= '/')
            include /assets/img/logo.svg

        .header__menu
          button.header__menu-close &times;

          +menu({items: [{
              "name": "о нас",
              "href": "#",
              "isActive": true
            },
            {
              "name": "услуги",
              "href": "#",
              "isActive": false,
              "submenu": [
                {
                  "name": "апартаменты",
                  "href": "#",
                  "isActive": false
                },
                {
                  "name": "spa",
                  "href": "#",
                  "isActive": false
                },
                {
                  "name": "конференц залы",
                  "href": "#",
                  "isActive": false
                }
              ]
            },
            {
              "name": "вакансии",
              "href": "#",
              "isActive": true
            },
            {
              "name": "новости",
              "href": "#",
              "isActive": true
            },
            {
              "name": "соглашения",
              "href": "#",
              "isActive": false,
              "submenu": [
                {
                  "name": "соглашение 1",
                  "href": "#",
                  "isActive": false
                },
                {
                  "name": "соглашение 2",
                  "href": "#",
                  "isActive": false
                },
                {
                  "name": "соглашение 3",
                  "href": "#",
                  "isActive": false
                }
              ]
            }]
          })

          if props.isLoggedIn
            .header__auth.header__auth_is-logged-in
              a(class= 'header__profile-link', href= dummyURL)= props.userName
          else 
            .header__auth
              +button({value: 'войти', type: 'link', isOutlined: true, mods: ['header__button']})(href= dummyURL)
              +button({value: 'зарегистрироваться', type: 'link', mods: ['header__button']})(href= dummyURL)

        +hamburger-menu({mods: ['header__menu-toggler']})