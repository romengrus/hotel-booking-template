//- Like button
//-
//- value         number (0) - Number of likes
//- hasVoted      boolean (false) - True if has state "liked", false otherwise
//- iLike         string ('hart-active') - icon for like state
//- iDislike      string ('hart') - icon for dislike state
mixin like({value=0, hasVoted=false, iLike='hart-active', iDislike='hart'} = {})
  include /components/icon/icon.pug

  -
    const icon = hasVoted ? iLike : iDislike;
  
  .like(
    data-like,
    data-value = value, 
    data-has-voted = hasVoted,
    data-i-like = iLike,
    data-i-dislike = iDislike)

    +icon({ name: icon })(data-like-icon)
    span.like__display(data-like-display)= value