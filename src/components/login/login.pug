//- Login Form
//-
//- registerLink  string ('') - Link to register page
mixin login(props = {})
  include /components/form/form.pug
  include /components/button/button.pug

  -
    const labels = {
      title: 'Войти',
      email: 'Email',
      password: 'Пароль',
      submit: 'Войти',
      haveAccount: 'Нет аккаунта на Toxin?',
      createAccount: 'Создать'
    }

  .login
    +form
      h2.login__title= labels.title

      input.login__email(type= 'email', placeholder= labels.email, required= true)
      input.login__password(type= 'password', placeholder= labels.password, required= true)

      +button({ mods: 'expanded' })= labels.submit

      .login__have-account
        span= labels.haveAccount
        +button({
          type: 'link',
          href: registerLink,
          mods: 'outlined'
        }) = labels.createAccount
