//- Login Form
//-
//- registerLink  string ('') - Link to register page
mixin login(props = {})
  include /components/form/form.pug
  include /components/field/field.pug
  include /components/button/button.pug

  -
    const labels = {
      title: 'Войти',
      email: 'Email',
      password: 'Пароль',
      submit: 'Войти',
      haveAccount: 'Нет аккаунта на Toxin?',
      createAccount: 'Создать'
    }

  .login
    +form
      h2.login__title= labels.title

      .login__email
        +field(type = 'email', placeholder = labels.email, required = true)

      .login__password
        +field(type = 'password', placeholder = labels.password, required = true)

      .login__submit
        +button({ isExpanded: true, icon: 'arrow-right-light' })= labels.submit

      .login__have-account
        span= labels.haveAccount
        +button({
          type: 'link',
          href: registerLink,
          isOutlined: true,
        })= labels.createAccount
