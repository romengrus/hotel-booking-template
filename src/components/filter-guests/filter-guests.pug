mixin filter-guests
  include /components/label/label.pug
  include /components/dropdown-counter/dropdown-counter.pug
  include /components/counter/counter.pug

  .filter-guests
    +label({value: 'Гости', pos: 'top', theme: ['bold', 'upper']}) 
      +dropdown-counter({ 
        resultType: 'total', 
        plurals: ['гость', 'гостя', 'гостей'] 
      })(placeholder= 'Сколько гостей')
        +label({value: 'взрослые', pos: 'left'})
          +counter({plurals: ['взрослый', 'взрослых', 'взрослых'], value: 2})

        +label({value: 'дети', pos: 'left'})
          +counter({plurals: ['ребенок', 'детей', 'детей'], value: 0})

        +label({value: 'младенцы', pos: 'left'})
          +counter({plurals: ['младенец', 'младенца', 'младенцев'], value: 1})