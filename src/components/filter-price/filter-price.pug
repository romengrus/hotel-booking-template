//- Price filter
//-
//- title   string ('Диапазон цены')
//- desc    string ('')
mixin filter-price({title = 'Диапазон цены', desc = ''} = {})
  include /components/label/label.pug
  
  .filter-price(data-filter-price)
    .filter-price__header
      .filter-price__label
        +label({ value: title, pos: 'left', theme: ['bold', 'upper'] })
      .filter-price__result(data-filter-price-result) 5 000₽ - 10 000₽
    .filter-price__range(data-filter-price-slider)
      if (block)
        block
    if (desc)
      .filter-price__desc= desc
