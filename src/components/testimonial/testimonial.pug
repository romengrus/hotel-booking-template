//- userImg     string ('')
//- userName    string ('')
//- createdAt   string ('') - when testimonial was created
//- numLikes    number (0) - number of likes this testimonial has
//- text        string ('') - testimonial text
mixin testimonial({userImg = '', userName = '', createdAt = '', numLikes = 0, text = ''} = {})
  include /components/like/like.pug

  section.testimonial(data-testimonial)
    .testimonial__left-col
      if (userImg)
        img.testimonial__user-img(src = userImg, title = userName)
      .testimonial__likes
        +like({ value: numLikes })
    .testimonial__right-col
      h3.testimonial__user-name= userName
      if (createdAt)
        span.testimonial__created-at= createdAt
      article.testimonial__text= text